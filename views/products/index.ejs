<%- include("../partials/head") %>

    <body>
        <h1>Table Product Toko FSW 3</h1>
        <a href="/admin/products">
            <button>semua</button>
        </a>
        <a href="/admin/products?stock=10&filter=kurang">
            <button>kurang dari 10</button>
        </a>
        <a href="/admin/products?stock=10&filter=lebih">
            <button>lebih dari 10</button>
        </a>
        <a href="/admin/products?stock=100&filter=lebih">
            <button>lebih dari 100</button>
        </a>
        <form>
            <input type="text" name="search" placeholder="search product name">
            <button type="submit">search</button>
        </form>
        <table>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>image product</th>
            <th>Action</th>
            <% products.map((product)=> { %>
                <tr>
                    <td>
                        <%= product.id %>
                    </td>
                    <td>
                        <%= product.name %>
                    </td>
                    <td>
                        <%= product.price %>
                    </td>
                    <td>
                        <%= product.stock %>
                    </td>
                    <td>
                        <img src="<%= product.imageUrl %>" alt="product image" style="width: 300px; height: 100px;">
                    </td>
                    <td>
                        <a href="/admin/products/edit/<%= product.id %>">
                            <button>
                                edit
                            </button>
                        </a>
                        <form action="/products/delete/<%= product.id %>" method="post">
                            <button>
                                delete
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </table>

        <a href="/admin/products/create">
            <button>
                create
            </button>
        </a>
    </body>

    </html>